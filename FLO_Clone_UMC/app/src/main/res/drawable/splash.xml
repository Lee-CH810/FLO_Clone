<?xml version="1.0" encoding="utf-8"?>
<!--@drawable/splash
    root element: layer-list
    splash 이미지 생성-->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/white" /> <!--배경 하얗게 지정-->
    <!--flo 로고 이미지를 위한 item
        gravity를 통해 가운데 위치시키기-->
    <item android:drawable="@drawable/ic_flo_logo" android:gravity="center"/>
</layer-list>
<!--해당 XML 파일을 테마로 사용하여 splash 화면을 구성할 예정
    Theme에서 splash를 위한 style 설정 필요-->